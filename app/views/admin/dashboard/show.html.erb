<section class="admin-dashboard">
  <header class="page-header">
    <h1>Admin >> Dashboard</h1>
  </header>
  <div class="panel panel-default products">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Number of <%= link_to 'Products',  [:admin, :products] %></th>
          <th>Number of <%= link_to 'Categories',  [:admin, :categories] %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td style="padding-left: 20%"> <h2><%= @product_count %></h2></td>
          <td style="padding-left: 20%"> <h2><%= @category_count %></h2></td>
        </tr>
      </tbody>
    </table>
  </div>
</section>
